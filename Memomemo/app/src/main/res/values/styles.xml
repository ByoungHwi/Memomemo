<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item> <!--Toolbar 스타일-->
        <item name="actionMenuTextColor">@color/colorToolbarText</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/colorToolbarText</item> <!--홈/뒤로가기 버튼의 색상-->
    </style>

    <!--Toolbar 스타일-->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorToolbar</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle</item> <!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorToolbarText</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textStyle">bold</item>
        <!--item name="android:textSize">15dp</item--> <!-- Toolbar의 타이틀 텍스트 사이즈-->
    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/colorToolbarText</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textStyle">bold</item>
        <!--item name="android:textSize">12dp</item--> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>

</resources>
